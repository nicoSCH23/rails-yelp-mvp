<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 offset-md-3">
      <h1>Create a new restaurant</h1>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
        <%= f.submit "Add restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

