<div class="home-banner">
  <h1>Restomappers</h1>
</div>
<div class="container">
  <% @restaurants.each do |restaurant| %>
    <div class="row">
      <div class="col-xs-12 col-md-8 offset-md-2 restaurant">
        <div class="upvote">
          <i class="fas fa-sort-up"></i>
          <p>13</p>
        </div>
        <div class="picture"></div>
        <div class="info">
          <h2><%=  restaurant.name %></h2>
          <p><%= restaurant.address %></p>
        </div>
        <div class="share">
          <i class="fa fa-trash"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>
