<div class="home-banner">
  <h1>Restomappers</h1>
</div>
<div class="container main-list">
  <% @restaurants.each do |restaurant| %>
    <div class="row">
      <div class="col-xs-12 col-md-8 offset-md-3 card">
        <div class="upvote">
          <% [1,2,3,4,5].sample.times do %>
            <i class="fas fa-star"></i>
          <% end %>
        </div>
        <img class= "picture" src=<%= restaurant.pictureurl %>>
        <div class="info">
          <h2><%=  link_to restaurant.name, restaurant_path(restaurant.id) %></h2>
          <p><%= restaurant.category.capitalize %> - <%= restaurant.address %></p>
        </div>
        <div class="delete">
          <%= link_to restaurant_path(restaurant.id),
          method: :delete,
          data: { confirm: "Are you sure?"} do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
