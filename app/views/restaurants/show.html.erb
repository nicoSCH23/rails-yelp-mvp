<div class="container">
  <div class="row">
    <%= link_to 'Edit this restaurant',  edit_restaurant_path, class: 'btn btn-primary btn-edit' %>
    <div class="col-md-6 col-md-offset-3">
      <div class="editor">
        <h1><%= @restaurant.name %></h1>
        <img class= "picture center-block" src=<%= @restaurant.pictureurl %>>
      </div>
      <div class="desc">
        <p>Category: <%= @restaurant.category.capitalize %></p>
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.phone_number %></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4"">
      <hr>
      <p><%= link_to 'Write a review', new_restaurant_review_path(@restaurant) %> / <%= link_to 'Back to list', restaurants_path %></p>
    </div>
  </div>
  <div class="row">
      <div class="col-md-4 col-md-offset-4"">
        <h2>Reviews</h2>
        <hr>
        <% @reviews.each do |review|%>
          <p>
            <%= review.rating %><i class="fas fa-star"></i>
            <%= review.content %>
          </p>
          <hr>
        <% end %>
      </div>
  </div>
</div>


